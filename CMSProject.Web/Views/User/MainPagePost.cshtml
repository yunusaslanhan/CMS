@model List<CMSProject.Common.Dtos.PostDto>
@{
    ViewData["Title"] = "MainPagePost";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">

    <div class="row" style="margin-top:4%">
        @foreach (var item in Model)
        {

            <div class="col-md-4" style="background-color:white; margin-bottom:10px; border:solid 3px; border-color:#364150 ">
                <div class="blog-single-content bordered blog-container">
                    <div class="blog-single-head">
                        <h3 class="blog-single-head-title"><strong>@item.PostTitle</strong></h3>

                    </div>
                    <div class="blog-single-img">
                        <a href="/User/PostDetailPage/@item.PostId/"> <img src="\@item.PostPhoto" style="width:100%; height:40%"></a>
                    </div>
                    <div class="blog-single-desc">
                        <p>
                            @item.PostDesc
                        </p>


                    </div>


                </div>
            </div>

        }

    </div>


</div>

