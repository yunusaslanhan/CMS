@model List<CMSProject.Common.Dtos.MainPageDto>
@{
    ViewData["Title"] = "AddMainPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-md-12">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-dark"></i>
                <span class="caption-subject font-dark sbold uppercase">Main Page</span>
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided" data-toggle="buttons">
                    <label class="btn btn-transparent dark btn-outline btn-circle btn-sm active">
                        <input type="radio" name="options" class="toggle" id="option1">Actions
                    </label>
                    <label class="btn btn-transparent dark btn-outline btn-circle btn-sm">
                        <input type="radio" name="options" class="toggle" id="option2">Settings
                    </label>
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Page Adı :</label>
                        <div class="col-md-9">
                            <input type="text" id="pageName" class="form-control">

                        </div>
                    </div>



                </div>

            </form>
            <div id="dynamicContent">
                @Html.Partial("MainPagePartial", @Model)
            </div>
        </div>

    </div>
</div>




<script type="text/javascript">
    function AddPage() {
        var mainPageId = $('#selectItem').val();
        var pageName = $('#pageName').val();
        $.ajax({
            url: "/Home/AddPageForAjax",
            data: { 'ParentId': mainPageId, 'Name': pageName },
            method: "POST",
            success: function (response) {
                alert("Page Başarıyla Eklendi!!!");
                $("#dynamicContent").html(response);
            }
        });
    }
</script>